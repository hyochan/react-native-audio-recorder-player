{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🍎 iOS Simulator",
      "request": "launch",
      "type": "node-terminal",
      "command": "${workspaceFolder}/.vscode/ios.sh"
    },
    {
      "name": "🤖 Android Emulator",
      "request": "launch",
      "type": "node-terminal",
      "command": "${workspaceFolder}/.vscode/android.sh",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "🚀 Metro Bundler",
      "request": "launch",
      "type": "node-terminal",
      "command": "yarn start --reset-cache",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "📱 iOS Device",
      "request": "launch",
      "type": "node-terminal",
      "command": "yarn ios --device",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "📱 Android Device",
      "request": "launch",
      "type": "node-terminal",
      "command": "yarn android --device",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "🧹 Clean Install (iOS)",
      "request": "launch",
      "type": "node-terminal",
      "command": "cd ios && rm -rf Pods Podfile.lock && pod install --repo-update && cd .. && yarn ios",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "🧹 Clean Build (Android)",
      "request": "launch",
      "type": "node-terminal",
      "command": "cd android && ./gradlew clean && cd .. && yarn android",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "🔄 Regenerate Nitro + Pods",
      "request": "launch",
      "type": "node-terminal",
      "command": "yarn nitrogen && cd example && npx pod-install",
      "cwd": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "🚀 iOS + Metro",
      "configurations": ["🚀 Metro Bundler", "🍎 iOS Simulator"],
      "stopAll": true
    },
    {
      "name": "🚀 Android + Metro",
      "configurations": ["🚀 Metro Bundler", "🤖 Android Emulator"],
      "stopAll": true
    }
  ]
}
