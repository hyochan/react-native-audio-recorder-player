{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "iOS Simulator",
      "request": "launch",
      "type": "node-terminal",
      "command": "${workspaceFolder}/.vscode/run_ios.sh",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "Android Emulator",
      "request": "launch",
      "type": "node-terminal",
      "command": "${workspaceFolder}/.vscode/run_android.sh",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "Start Metro",
      "request": "launch",
      "type": "node-terminal",
      "command": "npx react-native start --reset-cache",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "iOS Device",
      "request": "launch",
      "type": "node-terminal",
      "command": "npx react-native run-ios --device",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "Android Device",
      "request": "launch",
      "type": "node-terminal",
      "command": "npx react-native run-android --device",
      "cwd": "${workspaceFolder}/example"
    }
  ]
}