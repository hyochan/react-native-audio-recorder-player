{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸ iOS Simulator",
      "request": "launch",
      "type": "node-terminal",
      "command": "${workspaceFolder}/.vscode/ios.sh"
    },
    {
      "name": "ğŸ¤– Android Emulator",
      "request": "launch",
      "type": "node-terminal",
      "command": "${workspaceFolder}/.vscode/android.sh",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "ğŸš€ Metro Bundler",
      "request": "launch",
      "type": "node-terminal",
      "command": "yarn start --reset-cache",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "ğŸ“± iOS Device",
      "request": "launch",
      "type": "node-terminal",
      "command": "yarn ios --device",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "ğŸ“± Android Device",
      "request": "launch",
      "type": "node-terminal",
      "command": "yarn android --device",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "ğŸ§¹ Clean Install (iOS)",
      "request": "launch",
      "type": "node-terminal",
      "command": "cd ios && rm -rf Pods Podfile.lock && pod install --repo-update && cd .. && yarn ios",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "ğŸ§¹ Clean Build (Android)",
      "request": "launch",
      "type": "node-terminal",
      "command": "cd android && ./gradlew clean && cd .. && yarn android",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "name": "ğŸ”„ Regenerate Nitro + Pods",
      "request": "launch",
      "type": "node-terminal",
      "command": "yarn nitrogen && cd example && npx pod-install",
      "cwd": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "ğŸš€ iOS + Metro",
      "configurations": ["ğŸš€ Metro Bundler", "ğŸ iOS Simulator"],
      "stopAll": true
    },
    {
      "name": "ğŸš€ Android + Metro",
      "configurations": ["ğŸš€ Metro Bundler", "ğŸ¤– Android Emulator"],
      "stopAll": true
    }
  ]
}
